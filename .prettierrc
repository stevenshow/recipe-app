{
	"semi": true,
	"arrowParens": "always",
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "ignore",
	"printWidth": 100,
	"useTabs": true,
	"tabWidth": 2,
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
	"importOrder": [
		"^(react/(.*)$)|^(react$)",
		"<THIRD_PARTY_MODULES>",
		"^components/(.*)$",
		"^@mui/(.*)$",
		"^[./]"
	],
	"importOrderCaseInsensitive": true,
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
